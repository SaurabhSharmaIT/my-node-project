<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Assignment 1 - Task 3</title>
    <style>
        .navbar-custom {
            background-color: #343a40;
            /* Dark background color */
        }

        .navbar-brand {
            font-weight: bold;
            color: #ffffff !important;
            /* White text color */
        }

        .navbar-nav .nav-link {
            color: #bbc2c7 !important;

            transition: color 0.3s ease;

        }

        .navbar-nav .nav-link:hover {
            color: #0056b3;

        }

        .navbar-nav .nav-link.active {
            color: #ffffff !important;

        }


        .navbar-toggler-icon {
            background-image: url('data:image/svg+xml;base64,...');
            /* Optional custom icon */
        }

        .outer-div {
            padding: 20px;
            /* Adjust the value as needed */
        }
    </style>
</head>

<body>
    <div class="outer-div">
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                    aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav ms-left">
                        <li class="nav-item">
                            <a class="nav-link " href="/">Task 1</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/task2">Task 2</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/task3">Task 3</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="containerPD">
            <h2>Task 3 - Product Data</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <% columns.forEach(function(column) { %>
                            <th>
                                <%= column %>
                            </th>
                            <% }); %>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(row) { %>
                        <tr>
                            <% Object.values(row).forEach(function(value) { %>
                                <td>
                                    <%= value %>
                                </td>
                                <% }); %>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>